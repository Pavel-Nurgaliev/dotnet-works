<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="@Url.Content("~/css/style.css")" rel="stylesheet" type="text/css"/>
</head>
<body>
    <header>
        <nav>
            <a asp-controller="Home" asp-action="Index">LOGO</a>
            <a asp-controller="Category" asp-action="Index">Categories</a>
            <a asp-controller="Item" asp-action="Index">Items</a>
        </nav>
    </header>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div>
            <p>&copy; @FooterInfo.CompanyName</p>
            <p>by @FooterInfo.DeveloperName</p>
        </div>
    </footer>
</body>
</html>
